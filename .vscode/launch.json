{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python:Odoo",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "python": "${command:python.interpreterPath}",
      "console": "integratedTerminal",
      "program": "/path/code/odoo/odoo-bin",
      "args": ["-c", "${workspaceRoot}/odoo.conf"],
      "cwd": "${workspaceRoot}"
    }
  ]
}
